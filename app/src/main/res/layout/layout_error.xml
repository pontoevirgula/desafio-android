<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center"
    android:background="@android:color/background_light">

    <TextView
        android:text="@string/generic_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_title"
        android:textAlignment="center" android:textSize="20sp" android:textStyle="bold"/>
    <TextView
        android:text="@string/message_try_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_description"
        android:textAlignment="center" android:textSize="16sp" android:layout_marginTop="16dp"
        android:layout_marginBottom="50dp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp" app:srcCompat="@drawable/ic_refresh_black_24dp"
        android:id="@+id/image_refresh" android:contentDescription="@string/button_refresh"/>
</LinearLayout>